<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".QuizQuestion">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sound_button_quiz"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:onClick="onQuestionClicked"
        android:padding="50dp"
        app:icon="@android:drawable/ic_lock_silent_mode_off"
        app:iconSize="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/answers_container_quiz_question"
        android:layout_width="280dp"
        android:layout_height="290dp"
        android:layout_marginTop="370dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/answer_button_quiz_question_1"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:clickable="false"
                android:text="X"
                android:textSize="28dp"
                app:cornerRadius="30dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/answer_button_quiz_question_2"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:clickable="false"
                android:text="X"
                android:textSize="28dp"
                app:cornerRadius="30dp" />
        </TableRow>

        <Space
            android:layout_width="wrap_content"
            android:layout_weight="1" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/answer_button_quiz_question_3"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:clickable="false"
                android:text="X#"
                android:textSize="28dp"
                app:cornerRadius="30dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/answer_button_quiz_question_4"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:clickable="false"
                android:text="X#"
                android:textSize="28dp"
                app:cornerRadius="30dp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>